md-content#pokemon-content(layout="column", layout-padding)

  div.pokemon-filter(layout="row", layout-align="end", ng-class="{'gt-sm': gtSm}")
    md-input-container(flex="50", flex-sm="100")
      label Search
      input(ng-model="searchString", ng-change="onSearchStringUpdated()")

  div.md-padding(ng-repeat="trainer in trainers", ng-show="trainer.$filteredPokemons.length")
    h3.md-display-1 {{trainer.user.name}} ({{trainer.capturedPokemons.length}}/151)
    div(layout="row")
      div.badge(ng-repeat="badge in trainer.$badges")
        img(ng-src="{{badge.imageUrl}}")


    md-grid-list(
      md-cols-sm="2",
      md-cols-md="3",
      md-cols-gt-md="5"
      md-row-height="26:41"
    )
      md-grid-tile(ng-repeat="capture in trainer.$filteredPokemons", md-rowspan="1" md-colspan="1")
        md-card.pokemon-card
          md-tooltip(ng-show="capture.message") {{capture.message}}
          md-tooltip(ng-hide="capture.message") Nessun messaggio registrato
          div.md-padding
            img(ng-src="{{server}}/{{capture.pokemon.sprite.officialArt}}")
          md-card-content.pokemon-card-content
            div
              h5.md-subhead &#35;{{capture.pokemon.ndex}}
            div
              h4.md-subhead {{capture.pokemon.name}}

            div.types
              div.type(ng-repeat="type in capture.pokemon.types")
                span.pill(ng-class="typeData[type].class") {{typeData[type].name}}
